{
  "name": "api",
  "version": "1.0.0",
  "description": "Konamars LMS API",
  "main": "index.js",
  "private": "true",
  "scripts": {
    "lint": "eslint src/",
    "prod-migrate": "prisma migrate deploy",
    "start": "echo $DATABASE_URL && npm run prod-migrate && node build/src/index.js",
    "build": "tsc && npm run copy-email-templates",
    "dev": "ts-node-dev --respawn --pretty --transpile-only --exit-child src/index.ts",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "seed": "ts-node src/seed/index.ts",
    "copy-email-templates": "mkdir -p build/common/constants/email-templates  && cp -r src/common/constants/email-templates build/common/constants",
    "access-prod-db": "az postgres flexible-server firewall-rule update --resource-group konamars-lms-product --name prod-lmsdb --rule-name current_local_ip --start-ip-address `curl https://ipinfo.io/ip` --end-ip-address `curl https://ipinfo.io/ip`"
  },
  "repository": {
    "type": "git",
    "url": "git@ssh.dev.azure.com:v3/Kona-MarS-LMS/KonaLMS-MERN/konamars-api"
  },
  "author": "ramesh-km@outlook.com",
  "license": "ISC",
  "dependencies": {
    "@azure/storage-blob": "^12.11.0",
    "@prisma/client": "^4.7.1",
    "@sendgrid/mail": "^7.7.0",
    "auth0": "^2.42.0",
    "axios": "^1.1.2",
    "bull": "^4.10.1",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.1",
    "express-jwt": "^7.7.5",
    "express-jwt-authz": "^2.4.1",
    "formidable": "^2.0.1",
    "handlebars": "^4.7.7",
    "helmet": "^6.0.0",
    "http-errors": "^2.0.0",
    "jwks-rsa": "^2.1.4",
    "morgan": "^1.10.0",
    "npm": "^8.19.2",
    "signale": "^1.4.0",
    "vimeo": "^2.1.1",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.5.0",
    "@types/auth0": "^2.35.6",
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.14",
    "@types/express-jwt": "^6.0.4",
    "@types/formidable": "^2.0.5",
    "@types/helmet": "^4.0.0",
    "@types/http-errors": "^1.8.2",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.8.0",
    "@types/signale": "^1.4.4",
    "@types/vimeo": "^2.1.5",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "eslint": "^8.24.0",
    "prettier": "2.7.1",
    "prisma": "^4.7.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.4",
    "vitest": "^0.26.3"
  }
}
